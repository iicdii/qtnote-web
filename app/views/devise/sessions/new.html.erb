<div class="section" style="height:83vh;overflow:hidden;padding-bottom:120px;">
  <div class ="container" style="max-width:480px;">
    <h2 class="text-center qt-link-danger"><a href="/">QTNote</a></h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <label for="user_email">이메일</label><br />
      <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
    </div>
  
    <div class="field">
      <label for="user_password">패스워드</label><br />
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <label class="checkbox" for="user_remember_me">
        <span class="icons">
        <span class="first-icon fa fa-square fa-base"></span>
        <span class="second-icon fa fa-check-square fa-base"></span></span>
        <%= f.check_box :remember_me, :datatoggle => "checkbox" %>기억하기
      </label>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "로그인", :class => 'btn btn-danger btn-fill btn-block' %>
    </div>
    <% end %>
    <div class="qt-link-danger text-center" style="margin-top:10px; font-size:14px;">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "회원가입", new_registration_path(resource_name) %>
      <% end -%>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "비밀번호 찾기", new_password_path(resource_name) %>
      <% end -%>
    </div>
  </div>
</div>