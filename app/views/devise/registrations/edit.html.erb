<div class="section register_edit">
  <div class ="container" style="max-width:480px;">
    <h2 class="text-center qt-link-danger"><a href="/" class="qt-eng">QTNote</a></h2>
    <h3 class="title text-center"><%=t 'text.change_user_profile' %></h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <% if current_user.provider != 'google_oauth2' %>
    <div class="form-group">
      <label for="user_email"><%=t 'activerecord.attributes.user.email' %></label>
      <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
    </div>
    <% end %>
    <div class="form-group">
        <label for="user_nickname"><%=t 'activerecord.attributes.user.nickname' %> <span class="qt-info" style="margin-left:5px;"><%=t 'text.leave_nickname_blank' %></span> </label>
        <%= f.text_field :nickname, :class => 'form-control', :value => current_user.nickname, placeholder: t('text.nickname_placeholder') %>
    </div>
    <% if current_user.provider != 'google_oauth2' %>
    <div class="form-group">
      <label for="user_password"><%=t 'activerecord.attributes.user.password' %></label> <span class="qt-info" style="margin-left:5px;"><%=t 'text.leave_password_blank' %></span>
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
    </div>
    <div class="form-group">
      <label for="user_password_confirmation"><%=t 'activerecord.attributes.user.password_confirmation' %></label>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>
    <div class="form-group">
      <label for="user_password_confirmation"><%=t 'activerecord.attributes.user.current_password' %> <span class="qt-info" style="margin-left:5px;"><%=t 'text.enter_current_password' %></span></label>
      <%= f.password_field :current_password, autocomplete: "off", :class => 'form-control' %>
    </div>
    <% end %>
    <div class="actions">
      <%= f.submit t("text.modify"), :class => 'btn btn-danger btn-fill btn-block' %>
    </div>
    <% end %>
    <hr>
    <div class="text-right">
        <%= button_to t("text.cancel_my_account"), registration_path(resource_name), data: { confirm: t("text.are_you_sure") }, method: :delete, class: "btn btn-danger" %>
    </div>
    <div class="qt-link-danger text-center" style="margin-top:10px; font-size:14px;">
      <%- if devise_mapping.confirmable? %>
        <%= link_to t("text.reconfirmation"), new_confirmation_path(resource_name) %>
      <% end %>
    </div>
    <div class="text-center" style="font-size:13px;margin-top:10px;">
      <%= link_to t("text.back"), :back %>
    </div>
  </div>
</div>


