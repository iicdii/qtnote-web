<div class="section register_new" style="height:83vh;overflow:hidden;padding-bottom:120px;">
  <div class ="container" style="max-width:480px;">
    <h2 class="text-center qt-link-danger"><a href="/" class="qt-eng">QTNote</a></h2>
    <h3 class="title text-center"><%=t 'text.sign_up' %></h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="social">
                      <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-fill btn-danger", style: "padding-left:10px;padding-right:3px;" do %><i class='fa fa-google-plus' aria-hidden='true'></i><% end %>
                      <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-fill btn-danger", style: "padding-left:10px;padding-right:3px;" do %><i class='fa fa-facebook' aria-hidden='true'></i><% end %>    </div>
    <div class="division">
      <div class="line l"></div>
      <span class="qt-eng">OR</span>
      <div class="line r"></div>
    </div>
    <div class="form-group">
      <label for="user_email"><%=t 'activerecord.attributes.user.email' %></label><br />
      <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <label for="user_password"><%=t 'activerecord.attributes.user.password' %></label><br />
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
    </div>
    
    <div class="form-group">
      <label for="user_password_confirmation"><%=t 'activerecord.attributes.user.password_confirmation' %></label><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>
  
    <div class="actions" style="margin-top:20px;">
      <%= f.submit t('text.sign_up') , :class => 'btn btn-danger btn-fill btn-block' %>
    </div>
    <% end %>
    <div class="qt-link-danger text-center" style="margin-top:10px; font-size:14px;">
      <%- if controller_name != 'sessions' %>
        <%= link_to t("text.sign_in"), new_session_path(resource_name) %>
      <% end -%>
      <span class="qt-between">/</span>
      <%- if devise_mapping.confirmable? %>
        <%= link_to t("text.reconfirmation"), new_confirmation_path(resource_name) %>
      <% end %>
    </div>
  </div>
</div>